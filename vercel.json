{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/index.js" },
    { "src": "/(.*\\.js)", "dest": "frontend/dist/$1" },
    { "src": "/(.*\\.css)", "dest": "frontend/dist/$1" },
    { "src": "/(.*\\.webp)", "dest": "frontend/dist/$1" },
    { "src": "/(.*\\.png)", "dest": "frontend/dist/$1" },
    { "src": "/(.*\\.jpg)", "dest": "frontend/dist/$1" },
    { "src": "/(.*\\.svg)", "dest": "frontend/dist/$1" },
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ]
}
